# Database (required)
DATABASE_URL="postgresql://user:password@host:5432/database"

# NextAuth (required in production)
NEXTAUTH_URL="https://www.roalla.com"
NEXTAUTH_SECRET="generate-a-secure-random-string"
# When behind Railway/Vercel/proxy, set to trust Host header for OAuth callbacks:
# AUTH_TRUST_HOST=true

# OAuth / SSO (optional – add to enable sign-in with these providers)
# Google
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
# Microsoft / Outlook (Azure AD)
AZURE_AD_CLIENT_ID=""
AZURE_AD_CLIENT_SECRET=""
AZURE_AD_TENANT_ID="common"
# Apple (client secret must be a JWT – see https://developer.apple.com/documentation/sign_in_with_apple/generate_and_validate_tokens)
APPLE_ID=""
APPLE_SECRET=""
# Single Sign-On (OpenID Connect – Okta, Auth0, Keycloak, etc.)
SSO_ISSUER="https://your-idp.com"
SSO_CLIENT_ID=""
SSO_CLIENT_SECRET=""
SSO_NAME="Single Sign-On"

# Email (Resend) – for access links, Trust Center, password reset, contact form
RESEND_API_KEY="re_..."

# Bot protection for email request form (optional – Cloudflare Turnstile)
# Get free keys at https://dash.cloudflare.com/?to=/:account/turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY=""
TURNSTILE_SECRET_KEY=""

# Admin / notifications (optional)
ADMIN_EMAIL="admin@example.com"
ADMIN_NOTIFY_EMAIL="sales@roalla.com"

# Partner cap (optional, default 50)
PARTNER_ADD_USER_CAP=50

# Trust Center cron – remind before grant expiry (optional)
CRON_SECRET="shared-secret-for-cron-endpoint"
