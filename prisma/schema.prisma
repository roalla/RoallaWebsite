generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model AccessRequest {
  id        String   @id @default(cuid())
  email     String
  name      String
  company   String?
  reason    String?
  token     String   @unique
  status    String   @default("pending") // pending, approved, rejected
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([status])
  @@index([token])
}
